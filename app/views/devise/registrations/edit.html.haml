= render "partials/header"
.row-fluid
  #profile.span8.well
    .ribbon-left
      .ribbon-stitches-top
      %strong.ribbon-left-content
        %h1
          Edit #{resource_name.to_s.humanize}
      .ribbon-stitches-bottom
      .ribbon-stitches-right
    %hr/
    .row-fluid
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
        = f.error_notification
        .form-inputs
          = f.input :email, :required => true, :autofocus => true
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %p
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          = f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false
          = f.input :password_confirmation, :required => false
          = f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true
        .form-actions
          = f.button :submit, "Update", :class => "btn btn-primary btn-block"
      %h3 Delete my account
      %p
        Unhappy? #{link_to "Delete my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}
      = link_to "Back", :back
    %hr/
    .ribbon-left
      .ribbon-stitches-top
      %strong.ribbon-left-content
        %h1 Course(s) Taken
      .ribbon-stitches-bottom
      .ribbon-stitches-right
    %hr/
    .row-fluid
      #course1.span4.well
        %a{href: "./course.php"}
          %p
            %img.img-polaroid{src: "http://placehold.it/250x250&text=Course 1"}/
          %strong Some Course
      #course2.span4.well
        %a{href: "./course.php"}
          %p
            %img.img-polaroid{src: "http://placehold.it/250x250&text=Course 2"}/
          %strong Some Course
      #course3.span4.well
        %a{href: "./course.php"}
          %p
            %img.img-polaroid{src: "http://placehold.it/250x250&text=Course 3"}/
          %strong Some Course
  .span4
    .well
      %p
        %img.img-polaroid{src:"http://placehold.it/250x600&text=Tower Ad"}
= render "partials/footer"