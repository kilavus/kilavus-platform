= form_for @course do |f|
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :instructor
    = f.text_field :instructor
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :units
    = f.text_area :units
  .field
    = f.label :duration
    = f.text_field :duration
  .actions
    = f.submit 'Save'
